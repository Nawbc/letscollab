{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": false,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "pretty": true,
    "declaration": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
